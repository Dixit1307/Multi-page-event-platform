generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  name      String?
  email     String   @unique
  password  String?
  provider  String?
  createdAt DateTime @default(now())
  events    Event[]
}

model Event {
  id     String   @id @default(uuid()) @db.Uuid
  title  String
  date   DateTime
  type   String
  userId String   @db.Uuid
  user   User     @relation(fields: [userId], references: [id])
}
